# top-most EditorConfig file
root = true

# Applies to all files
[*]
indent_style = space
indent_size = 2

# Ensure consistent line endings across OS
end_of_line = lf

# Use UTF-8 everywhere
charset = utf-8

# Trim whitespace at end of lines
trim_trailing_whitespace = true

# Always add a newline at the end of files
insert_final_newline = true

# Special case for Markdown (don’t trim trailing spaces, since they’re meaningful for line breaks)
[*.md]
trim_trailing_whitespace = false

